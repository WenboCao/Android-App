<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="@drawable/appcover"
    android:gravity="end"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/unknow3" >

        <ImageButton
            android:id="@+id/settings_popup"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_about" />

        <ImageButton
            android:id="@+id/ReSignUp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/newssearch"
            android:src="@drawable/ic_action_person" />

        <Button
            android:id="@+id/newssearch"
            style="@android:style/Theme.Light.Panel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/settings_popup"
            android:text="News" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner11"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/userlocation" />

    <Spinner
        android:id="@+id/spinner22"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/spinner11"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/userlocation" />

    <TextView
        android:id="@+id/userprofession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userlocation"
        android:layout_centerVertical="true"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/spinner22"
        android:layout_marginTop="33dp"
        android:text="Clinical Practice"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/userlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/useremail"
        android:layout_below="@+id/spinner11"
        android:layout_marginTop="32dp"
        android:text="Disease/Organise"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner11"
        android:layout_centerHorizontal="true"
        android:text="Filter Search"
        android:textSize="24dp" />

    <ImageButton
        android:id="@+id/filtersearch"
        style="@android:style/Animation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/useremail"
        android:src="@drawable/ic_action_search" />

    <EditText
        android:id="@+id/keyword"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/userprofession"
        android:layout_marginBottom="29dp"
        android:layout_toLeftOf="@+id/spinner11"
        android:ems="10"
        android:hint="Keywords"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/keywordsearch"
        style="@android:style/Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/keyword"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/keyword"
        android:src="@drawable/ic_action_search" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1" >

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner33"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/filtersearch"
        android:layout_alignLeft="@+id/spinner22"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:text="Full Text Search"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24dp" />

</RelativeLayout>